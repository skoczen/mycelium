### BEGIN INIT INFO
# Provides:       mycelium
# Required-Start: $local_fs $syslog
# Required-Stop:  $local_fs $syslog
# Default-Start:  2 3 4 5
# Default-Stop:   0 1 6
# Short-Description: Gunicorn processes for mycelium
### END INIT INFO

CONFDIR="/var/www/mycelium.git/mycelium"
NAME="mycelium"
PORT=8000
WORKERS=3

USER=root
GUNICORN_RUN="run_gunicorn"
PID="/tmp/gunicorn_"$NAME".pid"
RETVAL=0

# source function library
. /lib/lsb/init-functions

start()
{
    echo "Starting $NAME."
    export PYTHONPATH=$CONFDIR:/root/.virtualenvs/python2.6/site-packages;
    "workon mycelium; python manage.py $GUNICORN_RUN  -workers=$WORKERS -p $PID --settings=envs.live --daemon" && echo "OK" || echo "failed";
}

stop()
{
    echo "Stopping $NAME"
    kill -QUIT `cat $PID` && echo "OK" || echo "failed";
}

reload()
{
    echo "Reloading $NAME:"
    if [ -f $PID ]
    then kill -HUP `cat $PID` && echo "OK" || echo "failed";
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        reload
        ;;
    reload)
        reload
        ;;
    force-reload)
        stop && start
        ;;
    *)
        echo $"Usage: $0 {start|stop|restart}"
        RETVAL=1
esac
exit $RETVAL