server {
    server_name  digitalmycelium.com *.digitalmycelium.com;
    access_log  /var/log/nginx/digitalmycelium.log;

    location /favicon.ico {
        root /var/www/media.digitalmycelium.com/images;
    }

    location /robots.txt {
        root /var/www/media.digitalmycelium.com;
    }

    location / {
        ssi on;
        proxy_pass http://127.0.0.1:8888;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}

server {
    server_name media.digitalmycelium.com;
    access_log  /var/log/nginx/rtdmedia.log;

    location / {
        root /var/www/media.digitalmycelium.com;
    }
}

server {
    server_name www.sphinxdocs.com sphinxdocs.com www.digitalmycelium.com digitalmycelium.com www.digitalmycelium.org;
    rewrite ^(.*) http://digitalmycelium.com$1;
}

server {
    server_name digitalmycelium.com *.digitalmycelium.com;
    if ($host ~* (.*)\.digitalmycelium\.com) {
      set $slug $1;
      rewrite ^(.*)$ http://$slug.digitalmycelium.com;
    }
    rewrite ^/(\w+)$ http://$1.digitalmycelium.com/;
    rewrite ^(.*)$ http://digitalmycelium.com/;
}
